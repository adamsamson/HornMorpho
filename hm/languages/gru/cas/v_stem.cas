BB = {b, f, m, p, w, bW, fW, mW, pW}
# all coronal consonants, non palatalized
NN = {d, t, T, s, z, r, n, l}
# coronal consonants, including palatalized
JJ = {d, t, T, r, s, z, c, C, j, x, y, Z}
